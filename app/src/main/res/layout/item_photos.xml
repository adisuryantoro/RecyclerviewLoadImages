<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_photos"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_padding_teen"
        android:layout_marginTop="@dimen/margin_padding_teen"
        android:layout_marginEnd="@dimen/margin_padding_teen"
        android:layout_marginBottom="@dimen/margin_padding_six"
        android:background="@drawable/background_white_full_box"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/margin_padding_twelve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,UnusedAttribute"
        tools:targetApi="o">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/iv_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_teen"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_title_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_six"
                android:layout_marginTop="@dimen/margin_padding_teen"
                android:layout_marginEnd="@dimen/margin_padding_six"
                android:layout_marginBottom="@dimen/margin_padding_six"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textSize="@dimen/margin_padding_twelve"
                tools:ignore="LabelFor,SpUsage"
                tools:targetApi="o" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>